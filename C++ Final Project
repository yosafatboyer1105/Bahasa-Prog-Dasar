}
void Kerjakankuis() {
	int soal, i, benar = 0, nilai = 0;
	char jawab;
	inputsoal();
	for (i = 0; i < 5; i++) {
		srand(time(0));
		soal = (rand() % 10);
		bank[i].nomorsoal = i + 1;
		cout << "\n";
		cout << bank[i].nomorsoal << "." << bank[soal].soal << endl;
		cout << "A. " << bank[soal].opsiA << endl;
		cout << "B. " << bank[soal].opsiB << endl;
		cout << "C. " << bank[soal].opsiC << endl;
		cout << "D. " << bank[soal].opsiD << endl;
		cout << "Jawaban Anda : ";
		cin >> jawabanUser[i].jawabanUser;
		jawabanUser[i].jawabanUser = (toupper(jawabanUser[i].jawabanUser));
		jawabanUser[i].jawabanBenar = bank[soal].jawaban;
		if (jawabanUser[i].jawabanUser == bank[soal].jawaban)
		{
			jawabanUser[i].benar++;
			jawabanUser[i].nilai += 20;
		}
		benar += jawabanUser[i].benar;
		nilai += jawabanUser[i].nilai;
	}
	cout << "Anda berhasil menjawab " << benar; cout << " soal dengan Benar."; cout << " Nilai anda adalah : " << nilai << endl;
}

int main() // 38 / 37 baris
{
	int pil;
	char ulang = 'y';
	while (ulang == 'y') {
		system("cls");
		cout << "===================================" << "\n";
		cout << "       Belajar Informatika         " << "\n";
		cout << "===================================" << "\n";
		cout << "1. Konversi Angka\n2. Deret Fibonacci\n3. Looping Segitiga\n4. Kerjakan Kuis\n5. Exit\n";
		cout << "Pilihan Anda :"; cin >> pil;
		switch (pil) {
		case 1:
			cout << "Decimal to Binary, Octal, Hexadecimal";
			konverter();
			cout << "\n" << "\nKembali ke menu awal [y/n]?"; cin >> ulang;
			break;
		case 2:
			fibonacci();
			cout << "\n" << "\nKembali ke menu awal [y/n]?"; cin >> ulang;
			break;
		case 3:
			loopingsegitiga();
			cout << "\n" << "\nKembali ke menu awal [y/n]?"; cin >> ulang;
			break;
		case 4:
			Kerjakankuis();
			cout << "\n" << "\nKembali ke menu awal [y/n]?"; cin >> ulang;
			break;
		case 5:
			ulang = 'n';
			break;
		default:
			cout << "Maaf pilihan hanya (1-5) aja ";
			cout << "\n" << "Silahkan masukan Pilihan anda kembali [y/n] : "; cin >> ulang;
		}
	}
	cout << "Terima Kasih udah Mampir - Kelompok 10";
}

